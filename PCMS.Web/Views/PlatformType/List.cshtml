<div id="table-list" style="width:100%">
    <script type="text/javascript">

        $(document).ready(function () {

            $('#table-list').jtable({
                title: 'Platform Types',
                sorting: true,
                defaultSorting: 'Name ASC',
                paging: true,
                actions: {
                    listAction: '/PlatformType/List',
                    deleteAction:'/PlatformType/Delete',
                    updateAction:'/PlatformType/Update',
                    createAction:'/PlatformType/Create'
                },
                fields: {
                    Id: {
                        title:'Id',
                        key: true,
                        create: false,
                        edit: false,
                        list:false
                    },
                    Name: {
                        title: 'Platform Type Name',
                    },
                },
                formCreated: function (e, data) {
                    data.form.find('input[name="Name"]').addClass('validate[required],maxSize[255]');
                    data.form.validationEngine();
                },
                formSubmitting: function (event, data) {
                    return data.form.validationEngine('validate');
                },
                formClosed: function (event, data) {
                    data.form.validationEngine('hide');
                    data.form.validationEngine('detach');
                }
            });

            $('#table-list').jtable('load');
        });

    </script>
</div>
